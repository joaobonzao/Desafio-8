package javaapplication6;

import java.text.DecimalFormat;
import java.util.Scanner;

public class JavaApplication6 {

    public static void main(String[] args) {
      Scanner ler = new Scanner(System.in);
      DecimalFormat decimal = new DecimalFormat("0.00");
       
      System.out.println("Insira o texto que deseja inverter: ");
      String texto = ler.nextLine();
        System.out.println(inverterTexto(texto));
      
    }
    public static String inverterTexto(String textoInvertido){
        return new StringBuilder(textoInvertido).reverse().toString();
    }
}
